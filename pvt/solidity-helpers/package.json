{
  "name": "@balancer-labs/v2-solidity-helpers",
  "version": "4.0.0",
  "description": "Solidity libraries and utilities exclusively for testing and internal reuse",
  "license": "GPL-3.0-only",
  "homepage": "https://github.com/balancer-labs/balancer-v2-monorepo/tree/master/pvt/solidity-helpers#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/balancer-labs/balancer-v2-monorepo.git",
    "directory": "pvt/solidity-helpers"
  },
  "bugs": {
    "url": "https://github.com/balancer-labs/balancer-v2-monorepo/issues"
  },
  "files": [
    "contracts/**/*.sol",
    "!contracts/test/**/*.sol"
  ],
  "scripts": {
    "build": "yarn compile",
    "compile": "hardhat compile && rm -rf artifacts/build-info",
    "compile:watch": "nodemon --ext sol --exec yarn compile",
    "lint": "yarn lint:solidity",
    "lint:solidity": "solhint 'contracts/**/*.sol'"
  },
  "dependencies": {
    "@balancer-labs/v2-interfaces": "workspace:*",
    "@balancer-labs/v2-solidity-utils": "workspace:*"
  },
  "devDependencies": {
    "@balancer-labs/balancer-js": "workspace:*",
    "@balancer-labs/v2-common": "workspace:*",
    "@balancer-labs/v2-helpers": "workspace:*",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "ethereum-waffle": "^3.4.4",
    "hardhat": "^2.12.5",
    "hardhat-ignore-warnings": "^0.2.4",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "v1.0.0-alpha.59",
    "solhint": "^3.2.0",
    "solhint-plugin-prettier": "^0.0.4"
  }
}
